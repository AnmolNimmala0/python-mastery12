# 
mini calculator 
while True:
    
        num1=int(input('Give a number'))
        num2=int(input('Give another number'))
        operation=(input('type an operation betwen +-/*'))
        if operation == '+':
            print(num1+num2)
            
            elif operation == '-':
                print(num1-num2)
            
            elif operation == '/':
                print(num1/num2)
                break
        else:
            print(num1*num2)


#guessing game
